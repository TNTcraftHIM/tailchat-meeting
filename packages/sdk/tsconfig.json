{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["DOM", "ES2015"],
    "jsx": "react",
    "outDir": "./lib",
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "downlevelIteration": true,
    "importsNotUsedAsValues": "error",
  },
  "include": ["./src"]
}
